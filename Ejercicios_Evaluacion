#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(int argc, char** argv) {
    
    char cadena[250],cadena2[250];
    int longitud;
    
    printf("Introduce una cadena: ");
    gets(cadena);
    longitud=strlen(cadena);
    
    for(int i=longitud-1, j=0; i>=0; i--, j++){
        cadena2[j]=cadena[i];
    }
    
    printf("La cadena es: %s\n",cadena);
    printf("La inversa es: %s\n",cadena2);
    
    return 0;
}
--------------------------------------------------------------------------------
07/12/2016

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(int argc, char** argv) {
    
    char cadena[250];
    int longitud;
    bool iguales;
    
    iguales=true;
    
    printf("Introduzca una palabra: ");
    gets(cadena);
    
    longitud=strlen(cadena);
    
    for(int i=0, j=longitud-1; i<=longitud/2 && iguales==true; i++, j--){
        if(cadena[i]==cadena[j]){
            iguales=true;
        }else{
            iguales=false;
        }
    }
    
    if(iguales==true){
        printf("La palabra es un palíndromo");
    }else{
        printf("La palabra no es un palíndromo");
    }
    
    return 0;
}
